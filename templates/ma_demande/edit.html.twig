{% extends "baseDashboard.html.twig" %}

{% block title %}Modifier ma demande{% endblock %}

{% block content %}
<div class="main-content container-fluid">
    <div class="page-title">
        <div class="row">
            <div class="col-12 col-md-6">
                <h3>Modifier ma Demande</h3>
                <p class="text-subtitle text-muted">Mettez à jour les informations concernant votre demande.</p>
            </div>
            <div class="col-12 col-md-6 text-md-end">
                <nav aria-label="breadcrumb" class="breadcrumb-header">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="{{ path('app_dashboard') }}">Dashboard</a></li>
                        <li class="breadcrumb-item"><a href="{{ path('app_ma_demande_index') }}">Liste des demandes</a></li>
                        <li class="breadcrumb-item active" aria-current="page">Modifier la demande</li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>

    <!-- Form to Edit MaDemande -->
    <section class="section">
        <div class="card">
            <div class="card-header">
                <h4>Formulaire de modification</h4>
            </div>
            <div class="card-body">
                {{ include('ma_demande/_form.html.twig', {'button_label': 'Mettre à jour'}) }}
            </div>
        </div>
    </section>

    <!-- Delete Form -->
    <section class="section mt-4">
        <div class="card">
            <div class="card-body">
                {{ include('ma_demande/_delete_form.html.twig') }}
            </div>
        </div>
    </section>

    <!-- Back to List Button -->
    <div class="actions mt-4">
        <a href="{{ path('app_ma_demande_index') }}" class="btn btn-secondary">Retour à la liste</a>
    </div>
</div>
{% endblock %}
