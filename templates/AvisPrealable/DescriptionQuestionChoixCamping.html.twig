      <div class="card-header">
        <h4 class="card-title">Question de choix sur la description camping</h4>
      </div>
      <div class="card-content">
        <!-- Table head dark -->
        <div class="table-responsive">
          {{ form_start(form) }}
          <table class="table mb-0">
            <thead class="thead-dark">
              <tr>
                <th>Question</th>
