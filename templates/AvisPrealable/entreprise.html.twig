{% extends "baseDashboard.html.twig" %}

{% block title %}Société{% endblock %}

{% block content %}
<div class="progress-bar">
    <ul>
        {% for numero ,etape in etapes %}
            <li class= "{% if numero + 1 == etape_courante  %} current {% endif %}">
                {{etape}}
            </li>
            {% endfor %}
    </ul>     
</div> 
<div class="main-content container-fluid">
    {{ form_start(form) }}
        {{ form_errors(form) }}
    <section id="horizontal-input">
        <!-- Section pour le formulaire -->
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <h4 class="card-title">Société</h4>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group row align-items-center">
                                <div class="col-lg-2 col-3">
                                    {{ form_label(form.denominationSociale, 'Denomination Social ', {'label_attr': {'class': 'col-form-label'}}) }}
                                </div>
                                <div class="col-lg-10 col-9">
                                    {{ form_widget(form.denominationSociale, {'attr': {'class': 'form-control'}}) }}
                                    {{ form_errors(form.denominationSociale) }}
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group row align-items-center">
                                <div class="col-lg-2 col-3">
                                    {{ form_label(form.enseigneCommerciale, 'Enseigne Commerciale', {'label_attr': {'class': 'col-form-label'}}) }}
                                </div>
                                <div class="col-lg-10 col-9">
                                    {{ form_widget(form.enseigneCommerciale, {'attr': {'class': 'form-control'}}) }}
                                    {{ form_errors(form.enseigneCommerciale) }}
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group row align-items-center">
                                <div class="col-lg-2 col-3">
                                    {{ form_label(form.adresseEntreprise, 'Adresse entreprise', {'label_attr': {'class': 'col-form-label'}}) }}
                                </div>
                                <div class="col-lg-10 col-9">
                                    {{ form_widget(form.adresseEntreprise, {'attr': {'class': 'form-control'}}) }}
                                    {{ form_errors(form.adresseEntreprise) }}
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group row align-items-center">
                                <div class="col-lg-2 col-3">
                                    {{ form_label(form.registreCommerce, 'Registre Commerce', {'label_attr': {'class': 'col-form-label'}}) }}
                                </div>
                                <div class="col-lg-10 col-9">
                                    {{ form_widget(form.registreCommerce, {'attr': {'class': 'form-control'}}) }}
                                    {{ form_errors(form.registreCommerce) }}
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group row align-items-center">
                                <div class="col-lg-2 col-3">
                                    {{ form_label(form.nomMandataire, 'Nom mandataire', {'label_attr': {'class': 'col-form-label'}}) }}                             
                                </div>
                                <div class="col-lg-10 col-9">
                                    {{ form_widget(form.nomMandataire, {'attr': {'class': 'form-control'}}) }}
                                    {{ form_errors(form.nomMandataire) }}
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group row align-items-center">
                                <div class="col-lg-2 col-3">
                                    {{ form_label(form.prenomMandataire, 'Prénoms mandataire', {'label_attr': {'class': 'col-form-label'}}) }}                             
                                </div>
                                <div class="col-lg-10 col-9">
                                    {{ form_widget(form.prenomMandataire, {'attr': {'class': 'form-control'}}) }}
                                    {{ form_errors(form.prenomMandataire) }}
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group row align-items-center">
                                <div class="col-lg-2 col-3">
                                    {{ form_label(form.nationalite, 'Nationalité', {'label_attr': {'class': 'col-form-label'}}) }}                             
                                </div>
                                <div class="col-lg-10 col-9">
                                    {{ form_widget(form.nationalite, {'attr': {'class': 'form-control'}}) }}
                                    {{ form_errors(form.nationalite) }}
                                </div>
                            </div>                                   
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group row align-items-center">
                                <div class="col-lg-2 col-3">
                                    {{ form_label(form.telephoneEntreprise, 'Téléphone entreprise', {'label_attr': {'class': 'col-form-label'}}) }}                             
                                </div>
                                <div class="col-lg-10 col-9">
                                    {{ form_widget(form.telephoneEntreprise, {'attr': {'class': 'form-control'}}) }}
                                    {{ form_errors(form.telephoneEntreprise) }}
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group row align-items-center">
                                <div class="col-lg-2 col-3">
                                    {{ form_label(form.mailEntreprise, 'Email entreprise', {'label_attr': {'class': 'col-form-label'}}) }}                             
                                </div>
                                <div class="col-lg-10 col-9">
                                    {{ form_widget(form.mailEntreprise, {'attr': {'class': 'form-control'}}) }}
                                    {{ form_errors(form.mailEntreprise) }}
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    <div class="row mt-3">
    <div class="col-md-12 text-end">
        <button type="submit" class="btn btn-primary">Enregistrer</button>
    </div>
    </div>
    </section>
    {{ form_end(form) }}
</div>
{% endblock %}


