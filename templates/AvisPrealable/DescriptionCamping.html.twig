{% extends "baseDashboard.html.twig" %}

{% block title %}Description camping{% endblock %}

{% block content %}
<div class="progress-bar">
  <ul>
      {% for numero ,etape in etapes %}
          <li class= "{% if numero + 1 == etape_courante  %} current {% endif %}">
              {{etape}}
          </li>
          {% endfor %}
  </ul>     
</div> 
<div class="row" id="table-head">
  <div class="col-12">
    <div class="card">
      <div class="card-header">
        <h4 class="card-title">Description camping</h4>
      </div>
      <div class="card-content">
        <!-- Table head dark -->
        <div class="table-responsive">
          {{ form_start(form) }}
          <table class="table mb-0">
            <thead class="thead-dark">
              <tr>
                <th>Désignation</th>
                <th>Nombre</th>
                <th>Superficie</th>
              </tr>
            </thead>
            <tbody>
              {% for detailForm in form.details %}
              <tr>
                <td class="text-bold-500">{{ detailForm.vars.data.designation }}</td>
                <td class="text-bold-500">{{ form_widget(detailForm.nombre) }}</td>
                <td class="text-bold-500">{{ form_widget(detailForm.superficie) }}</td>
              </tr>
              {% endfor %}
            </tbody>
          </table>
        <div class="row mt-3">
            <div class="col-md-12 text-end">
                <button type="submit" class="btn btn-primary">Enregistrer</button>
                <a href="{{ path('Affichage_QuestionDescriptionCamping') }}" class="btn btn-secondary">Autres Informations</a>
            </div>
        </div>
          {{ form_end(form) }}
        </div>
      </div>
    </div>
  </div>
</div>
{% endblock %}



