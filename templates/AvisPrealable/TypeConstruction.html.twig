{% extends "baseDashboard.html.twig" %}

{% block title %}Type de Construction{% endblock %}

{% block content %}
<div class="row" id="table-head">
  <div class="col-12">
    <div class="card">
      <div class="card-header">
        <h4 class="card-title">Type de construction</h4>
      </div>
      <div class="card-content">
        <!-- Table head dark -->
        <div class="table-responsive">
          {{ form_start(form) }}
          <table class="table mb-0">
            <thead class="thead-dark">
              <tr>
                <th>Désignation</th>
                <th>Unité</th>
                <th>Nombre</th>
              </tr>
            </thead>
<tbody>
  {% for detailForm in form.details %}
  <tr>
    <td class="text-bold-500">{{ detailForm.vars.data.designation }}</td>
    <td>{{ form_widget(detailForm.unite) }}</td>
    <td class="text-bold-500">{{ form_widget(detailForm.nombre) }}</td>
  </tr>
  {% endfor %}
</tbody>

          </table>
        <div class="row mt-3">
            <div class="col-md-12 text-end">
                <button type="submit" class="btn btn-primary">Enregistrer</button>
            </div>
        </div>
          {{ form_end(form) }}
        </div>
      </div>
    </div>
  </div>
</div>
{% endblock %}

