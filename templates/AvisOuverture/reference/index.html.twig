{% extends "baseDashboard.html.twig" %}

{% block title %}Reference d'avis préalable{% endblock %}

{% block content %}
<div class="main-content container-fluid">
<div class="page-title">
        <div class="row">
            <div class="col-12 col-md-6 order-md-1 order-last">
                <h3>Autorisation Ouverture</h3>
                <p class="text-subtitle text-muted">Entrez votre reference d'avis préalable</p>
            </div>
            <div class="col-12 col-md-6 order-md-2 order-first">
                <nav aria-label="breadcrumb" class='breadcrumb-header'>
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="{{ path('dashboard') }}">Demande</a></li>
                        <li class="breadcrumb-item active" aria-current="page">Autorisation Ouverture</li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>
    {{ form_start(formreference) }}

    <section id="horizontal-input">
        <!-- Section pour le formulaire -->
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <h4 class="card-title">Reference AP</h4>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group row align-items-center">
                                <div class="col-lg-2 col-3">
                                    {{ form_label(formreference.reference, 'Réference', {'label_attr': {'class': 'col-form-label'}}) }}
                                </div>
                                  <div class="col-lg-10 col-9">
                    {{ form_widget(formreference.reference, {'attr': {'class': 'form-control', 'placeholder': 'Entrez la référence'}}) }}
                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group row align-items-center">
                                <div class="col-lg-2 col-3">
                                    {{ form_label(formreference.datesignature, 'Date de signature', {'label_attr': {'class': 'col-form-label'}}) }}
                                </div>
                                <div class="col-lg-10 col-9">
                    {{ form_widget(formreference.datesignature, {'attr': {'class': 'form-control', 'placeholder': 'Sélectionnez une date'}}) }}
                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group row align-items-center">
                                <div class="col-lg-2 col-3">
                                    {{ form_label(formreference.signataire, 'Signataire', {'label_attr': {'class': 'col-form-label'}}) }}
                                </div>
                                <div class="col-lg-10 col-9">
                    {{ form_widget(formreference.signataire, {'attr': {'class': 'form-control', 'placeholder': 'Entrez le signataire'}}) }}
                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    <div class="row mt-3">
    <div class="col-md-12 text-end">
        <button type="submit" class="btn btn-primary">Enregistrer</button>
    </div>
    </div>
    </section>
    {{ form_end(formreference) }}
</div>
{% endblock %}
